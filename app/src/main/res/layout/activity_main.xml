<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mike.amina.ritu.MainActivity">



    <TextView
        android:id="@+id/Banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="40dp"
        android:text="Banner"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/banner_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="203dp"
        android:background="#3f51b5"
        android:text="Banner"
        android:textColor="#fff"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/inters_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="260dp"
        android:background="#3f51b5"
        android:text="Interstial"
        android:textColor="#fff"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/reward_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/inters_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:background="#3f51b5"
        android:text="Reward"
        android:textColor="#fff"
        android:textSize="30dp" />

    <Button
        android:id="@+id/rules_shower"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="29dp"
        android:background="#3f51b5"
        android:gravity="center"
        android:text="Rules And Terms"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dev_info"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp"
        android:gravity="center"
        android:text="Devoloped By HASAN"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Inter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="85dp"
        android:text="Interstitial"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ban_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Banner"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="94dp"
        android:layout_marginRight="94dp"
        android:layout_marginBottom="-6dp"
        android:background="@android:color/holo_blue_bright"
        android:padding="5dp"
        android:text="Num"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/int_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Banner"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="94dp"
        android:layout_marginRight="94dp"
        android:layout_marginBottom="-51dp"
        android:background="@android:color/holo_blue_bright"
        android:padding="5dp"
        android:text="Num"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Banner"
        android:layout_marginTop="65dp"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:text="Total"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
